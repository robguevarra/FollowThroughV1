# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# AI Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# WhatsApp Cloud API Configuration
# Get these from: https://developers.facebook.com/apps/
WHATSAPP_API_TOKEN=your_whatsapp_api_token_here

# IMPORTANT: This should be the Phone Number ID (numeric), NOT the actual phone number
# Find this in: WhatsApp > API Setup > Phone Number ID
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Verification token for webhook setup (you create this yourself)
# Use this when configuring the webhook in Meta for Developers
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_here

# Development Settings
# Set to 'true' to use mock messaging (no real WhatsApp API calls)
# Set to 'false' or remove for production
MOCK_MESSAGING=true
